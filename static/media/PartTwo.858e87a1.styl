.part-two-item
    display: inline-block
    width: 4.8rem
    height 1.9rem
    border-bottom: #821717 2px solid 
    margin-top 0.3rem
    img
        float left
        width: 1.8rem
        height 1.8rem
    .part-two-detail
        float left
        width: 3rem
        height 1.8rem
        p.tile
            font-size: 0.26rem
            color: white
        p.price
            font-size 0.2rem
